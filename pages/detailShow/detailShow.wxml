<!--pages/detailShow/detailShow.wxml-->
<view class='container'>
<image class='image' style="background-color: #eeeeee;" mode="aspectFit" src="../../images/image.png"></image>
    <form>  
      <text class='itemView'>加班日期：{{date}}</text>
      <text class='itemView'>部门：{{department}}</text>
      <text class='itemView'>姓名：{{name}}</text>
      <text class='itemView'>加班缘由：{{reason}}</text>
      <text class='itemView'>加班时长：{{durations[durationIndex]}}h</text>
      <text class='itemView'>加班地点：{{place}}</text>

      <view class="button">
        <button bindtap='goToForm' type='primary'>修改</button>
        <button bindtap='deleteRecord' data-date='{{date}}' type='warn'>删除</button>
      </view>

    </form>  
</view>

